{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "skipLibCheck": true,
    "exactOptionalPropertyTypes": false
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "../../node_modules",
    "../../node_modules/@azure"
  ]
}